<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendationDetail">

    <ImageView
        android:id="@+id/bannerImageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnTwoDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:src="@drawable/baseline_close_24" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivTwoProfile"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/tvTwoUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Merve Alp"
            android:textColor="#363636"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="129dp" />

        <TextView
            android:id="@+id/tvTwoUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="T.C. Ulaştırma ve Altyapı Bakanlığı Şirketinde Meneger"
            android:textColor="#363636"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTwoUserUni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/baseline_menu_book_24"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Süleyman Demirel Üniversitesi"
            android:textColor="#363636"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/btnCallNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tel: 555 555 55 55"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/btnViewMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adres"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/btnTwoConnect"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="Connect"
            android:textColor="#363636" />

        <Button
            android:id="@+id/btnSendEmail"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="E-Mail"
            android:textColor="#363636" />

        <Button
            android:id="@+id/btnCreateCalenderEvent"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="Takvim"
            android:textColor="#363636" />

        <Button
            android:id="@+id/btnOpenAndAppWithChooser"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="Uygulama Seçme"
            android:textColor="#363636" />

        <Button
            android:id="@+id/btnOpenOtherApp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="Mesaj Uygulaması"
            android:textColor="#363636" />

        <Button
            android:id="@+id/btnSetAlarm"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="Alarm"
            android:textColor="#363636" />




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>